pipeline {
    agent any
        tools {
            NodeJS 'nodejs 8.9.0'
        }
    
    stages {
        stage('build') {
            when{
            changeset "**/result/**"
          }
            steps {
                echo "building result app"   
                    dir ('result') {
                        sh 'npm install'
                    }
            }
        }
        stage('test') {
            when{
            changeset "**/result/**"
          }
            steps {
                    echo "building result test" 
                    dir ('worker') {
                        sh 'npm install'
                        sh 'npm test'
                    }
            }
        }
    }
    post {
        always {
            echo 'This pipeline is completed'
            
        }
    }
}
